{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@bounce/providers/*": ["../../libs/providers/src/*"],
      "@bounce/core/*": ["../../libs/core/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
